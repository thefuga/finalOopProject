<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="trabalhoPoo.view.CreateNewPlayerController">
   <children>
      <AnchorPane id="AnchorPane" prefHeight="182.0" prefWidth="522.0">
         <children>
            <Label layoutX="249.0" layoutY="14.0" text="Create your hero">
               <font>
                  <Font name="Old English Text MT" size="39.0" />
               </font>
            </Label>
            <TextArea editable="false" layoutX="14.0" layoutY="22.0" prefHeight="138.0" prefWidth="207.0" text="Hello, hero!&#10;Before we begin our adventure, &#10;i'll need to collect some &#10;information.&#10;Please inform your name and the&#10;class you'd like to play so we can&#10;start.">
               <font>
                  <Font name="Baskerville Old Face" size="14.0" />
               </font>
            </TextArea>
            <GridPane layoutX="276.0" layoutY="83.0" prefHeight="60.0" prefWidth="207.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="95.0" minWidth="10.0" prefWidth="60.0" />
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="162.0" minWidth="10.0" prefWidth="135.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Name">
                     <font>
                        <Font name="Baskerville Old Face" size="14.0" />
                     </font>
                  </Label>
                  <Label text="Class" GridPane.rowIndex="1">
                     <font>
                        <Font name="Baskerville Old Face" size="14.0" />
                     </font>
                  </Label>
                  <TextField fx:id="nameTextField" GridPane.columnIndex="1" />
                  <MenuButton fx:id="classMenuButton" mnemonicParsing="false" prefHeight="22.0" prefWidth="144.0" text="Class" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <items>
                      <MenuItem fx:id="meleeMenuItem" mnemonicParsing="false" text="Melee" />
                      <MenuItem fx:id="rangedMenuItem" mnemonicParsing="false" text="Ranged" />
                    </items>
                     <font>
                        <Font name="Baskerville Old Face" size="12.0" />
                     </font>
                  </MenuButton>
               </children>
            </GridPane>
            <Button layoutX="436.0" layoutY="149.0" mnemonicParsing="false" onAction="#doneButton" text="Done!">
               <font>
                  <Font name="Baskerville Old Face" size="12.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
